# ===== APPLICATION INFO =====
APP_NAME=AI Models Comparison Platform
APP_VERSION=1.0.0

# ===== TIMEOUT CONFIGURATION =====
REQUEST_TIMEOUT=300
MAX_RETRIES=3
RETRY_DELAY=1.0
